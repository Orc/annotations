CC=@CC@
LIBS=@LIBS@

COMMON=theme.o rewrite.o initialize.o xgetenv.o

POST_OBJS=format.o post.o mapfile.o indexer.o rss.o readconfig.o $(COMMON)
REINDEX_OBJS=format.o mapfile.o readconfig.o indexer.o reindex.o rss.o $(COMMON)
COMMENT_OBJS=comment.o format.o mapfile.o readconfig.o indexer.o rss.o post.o $(COMMON)
PGMS=post reindex comment @XMLPOST@
CGIDIR=@CGIDIR@
EXEDIR=@exedir@

all: $(PGMS)

post: $(POST_OBJS) bbs_post.o
	$(CC) $(CFLAGS) -o $@ $(POST_OBJS) bbs_post.o $(LIBS)

xmlpost: $(POST_OBJS) xmlpost.o
	$(CC) $(CFLAGS) -o $@ $(POST_OBJS) xmlpost.o $(LIBS)

reindex: $(REINDEX_OBJS)
	$(CC) $(CFLAGS) -o $@ $(REINDEX_OBJS) $(LIBS)

comment: $(COMMENT_OBJS)
	$(CC) $(CFLAGS) -o $@ $(COMMENT_OBJS) $(LIBS)

install_:
	true

install_xmlpost:
	@INSTALL@ -m 6711 -o 0 -g 0 xmlpost $(CGIDIR)/@EXEC_PREFIX@xmlpost@EXEC_SUFFIX@

install: install_@XMLPOST@ $(PGMS) $(CGIDIR)
	@INSTALL@ -m 6711 -o 0 -g 0 post $(CGIDIR)/@EXEC_PREFIX@post@EXEC_SUFFIX@
	@INSTALL@ -m 6711 -o 0 -g 0 comment $(CGIDIR)/@EXEC_PREFIX@comment@EXEC_SUFFIX@
	@INSTALL@ -m 6711 -o 0 -g 0 reindex $(CGIDIR)/@EXEC_PREFIX@reindex@EXEC_SUFFIX@
	@INSTALL@ -m 6711 -o 0 -g 0 reindex $(EXEDIR)/@EXEC_PREFIX@reindex
	@INSTALL@ -m 755  -o 0 -g 0 setup.weblog $(EXEDIR)
	-@INSTALL_DATA@  annotations.7 @mandir@/man7
	-@INSTALL_DATA@  weblog.conf.5 @mandir@/man5
	-@INSTALL_DATA@  setup.weblog.8 @mandir@/man8
	-@INSTALL_DATA@  reindex.8 @mandir@/man8/@EXEC_PREFIX@reindex.8

clean:
	rm -f *.o $(PGMS)

distclean spotless: clean
	rm -f readconfig.* @CONFIGURE_FILES@ @GENERATED_FILES@

bbs_post.o: bbs_post.c config.h indexer.h formatting.h
comment.o: comment.c config.h indexer.h formatting.h
readconfig.o: readconfig.c config.h formatting.h mapfile.h
format.o: format.c config.h formatting.h indexer.h
indexer.o: indexer.c config.h formatting.h indexer.h mapfile.h
rss.o: rss.c config.h formatting.h indexer.h mapfile.h
mapfile.o: mapfile.c mapfile.h
post.o: post.c indexer.h formatting.h mapfile.h
reindex.o: reindex.c config.h formatting.h mapfile.h indexer.h
theme.o: theme.c config.h
rewrite.o: rewrite.c config.h formatting.h
